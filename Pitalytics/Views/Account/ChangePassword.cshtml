@model Pitalytics.Interfaces.IChangePasswordView
@{
    ViewBag.Title = "ChangePassword";
}

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--<h2>Register</h2>-->
<div class="mybgimage">
    <div><p></p></div>
    @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row no-gutters py-5">
                <div class="card col-md-4 m-auto">
                    <div class="card-header">
                        <h4>Forgot Password</h4>
                    </div>
                    <div class="card-body">
                        <p class="text-danger">@Html.ValidationSummary()</p>
                        <p class="text-danger"> @Model.ProcessingMessage</p>


                        <div class="form-group">
                            <label>Old Password</label>
                            <input id="OldPassword" class="form-control" name="OldPassword" placeholder="enter your old password" style="width: 250px;" type="text" maxlength="50" value="@Model.OldPassword" />
                        </div>

                        <div class="form-group">
                            <label>New Password</label>
                            <input id="NewPassword" class="form-control" name="NewPassword" placeholder="enter your new password" style="width: 250px;" type="text" maxlength="50" value="@Model.NewPassword" />
                        </div>

                        <div class="form-group">
                            <label>Confirm New Password</label>
                            <input id="ConfirmNewPassword" class="form-control" name="ConfirmNewPassword" placeholder="re-enter new password" style="width: 250px;" type="text" maxlength="50" value="@Model.ConfirmNewPassword" />
                        </div>

                        <div>

                            <input type="submit" value="Send" class="enabledButton btn btn-primary" style="width:125px;" />

                        </div>


                    </div>


                </div>
            </div>
        </div>
    }


</div>

@section Stylesheets{
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts
