@model Pitalytic.Domain.Models.EmployeeModel

@Html.AntiForgeryToken()
@if (ViewBag.Message != null)
{
    <span class="text-success">@ViewBag.Message</span>
}
<span class="alert-danger">
    @Html.ValidationSummary()
</span>
<div class="form-group">
    @Html.LabelFor(model => model.EmpFirstName)
    @Html.TextBoxFor(model => model.EmpFirstName, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(model => model.EmpLastName)
    @Html.TextBoxFor(model => model.EmpLastName, new { @class = "form-control" })
</div>
<div class="form-group">
    @Html.LabelFor(model => model.EmpSalary)
    @Html.TextBoxFor(model => model.EmpSalary, new { @class = "form-control" })
</div>