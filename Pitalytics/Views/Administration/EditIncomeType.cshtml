
@model Pitalytics.Interfaces.IIncomeTypeListView







<div class="modal-header">
    <h3>@ViewBag.Title</h3>

    <div style="text-align:right">

    </div>
</div>



<div class="container-fluid">

    <!-- Modal -->
    @using (Html.BeginForm("EditIncomeType", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="container">


            <div class="row no-gutters pt-5">
                <div style="text-align:center" class="card col-md-5 m-auto">

                    <div class="card-header">
                        <h4 style="text-align: center;" class="text-primary">Edit Income Type</h4>
                        
                    </div>

                    <div class="card-body">
                        <span style="color:green">
                            @Model.ProcessingMessage
                        </span>
                        <span style="color:red">
                            @Html.ValidationSummary()
                        </span>
                        <input type="hidden" name="IncomeTypeId" value="@Model.IncomeTypeId" />


                        <div class="form-group">
                    
                            <div class="">
                                <input type="text" placeholder="Income Type Name" name="IncomeTypeName" required id="Company" value="@Model.IncomeTypeName" class="form-control text-type" />
                            </div>
                        </div>



                        <div style="text-align:center">
                            <input type="submit" id="submit" name="login" value="Edit Income Type" style="color:white;" class="btn btn-primary mt-2" />

                            <a class="btn btn-danger" href="IncomeType">Cancel</a>
                        </div>


                    </div>


                </div>
            </div>
        </div>
    }

</div>



@section Stylesheets{
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts
        ============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900" rel="stylesheet">
    <link href="~/Content/asset/css/newSite.css" rel="stylesheet" />
}

@section JavascriptsInclude{

   <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script> 
  <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>  

}