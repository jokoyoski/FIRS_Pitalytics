
@model Pitalytics.Interfaces.IIndustryListView







<div class="modal-header">
    <h3>@ViewBag.Title</h3>

    <div style="text-align:right">

       
    </div>
</div>



<div class="container-fluid">

    @using (Html.BeginForm("EditIndustry", "Administration", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="container">


            <div class="row no-gutters pt-5">
                <div style="text-align:center" class="card col-md-5 m-auto">

                    <div class="card-header">
                        <h4 style="text-align: center;" class="text-primary">Edit Industry </h4>
                    </div>

                    <div class="card-body">
                        <span style="color:green">
                            @Model.ProcessingMessage
                        </span>
                        <span style="color:red">
                            @Html.ValidationSummary()
                        </span>
                        <input type="hidden" name="IndustryId" value="@Model.IndustryId" />


                        <div class="form-group">
                          
                            <div class="">
                                <input type="text" placeholder="Industry Name" name="IndustryName" required id="Company" value="@Model.IndustryName" class="form-control text-type" />
                            </div>
                        </div>



                        <div style="text-align:center">
                            <input type="submit" id="submit" name="login" value="Edit Industry" style="color:white;" class="btn btn-primary mt-2" />
                            <a class="btn btn-danger" href="Industry">Cancel</a>
                        </div>


                    </div>


                </div>
            </div>
        </div>
    }

</div>




@section Stylesheets{
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts
        ============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900" rel="stylesheet">
    <link href="~/Content/asset/css/newSite.css" rel="stylesheet" />
}
